@using Problema7.Models
@model Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h5></h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Usuario)
                            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Usuario)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Password)
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", Type = "password" })
                            @Html.ValidationMessageFor(model => model.Password)

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" value="Iniciar sesión" class="btn btn-success" />                                                       
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-danger">
                            @if (TempData["LogError"] != null)
                            {
                                @TempData["LogError"]
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>